<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- TÃ­tulo de la app -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1976D2"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Algoritmo de Dijkstra"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ruta Ã“ptima en Grafos"
            android:textSize="14sp"
            android:textColor="#E3F2FD"
            android:gravity="center"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- PestaÃ±as -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="2dp"
        app:tabTextColor="#666666"
        app:tabSelectedTextColor="#1976D2"
        app:tabIndicatorColor="#1976D2"
        app:tabIndicatorHeight="3dp"/>

    <!-- Container para VisualizaciÃ³n del Grafo -->
    <LinearLayout
        android:id="@+id/containerGrafo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ—ºï¸ VisualizaciÃ³n del Grafo"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:padding="16dp"
                    android:background="#E3F2FD"/>

                <com.example.sigdistrak.GrafoView
                    android:id="@+id/grafoView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŸ¢ Inicio  ðŸ”µ Camino  ðŸ”´ Destino"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>

    <!-- Container para Calculadora -->
    <ScrollView
        android:id="@+id/containerCalculadora"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card de selecciÃ³n -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Seleccionar Puntos"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333"
                        android:layout_marginBottom="16dp"/>

                    <!-- Nodo de inicio -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸŸ¢ Nodo de Inicio:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#555"
                        android:layout_marginBottom="8dp"/>

                    <Spinner
                        android:id="@+id/spinnerInicio"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@android:drawable/spinner_background"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Nodo de fin -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”´ Nodo de Destino:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#555"
                        android:layout_marginBottom="8dp"/>

                    <Spinner
                        android:id="@+id/spinnerFin"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@android:drawable/spinner_background"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp"/>

                    <!-- BotÃ³n calcular -->
                    <Button
                        android:id="@+id/btnCalcular"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="ðŸ” Calcular Ruta Ã“ptima"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:backgroundTint="#1976D2"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card de resultado -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Resultado"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/tvResultado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Seleccione los nodos y presione 'Calcular'"
                        android:textSize="14sp"
                        android:textColor="#666"
                        android:lineSpacingExtra="4dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card de pasos -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Proceso del Algoritmo"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333"
                        android:layout_marginBottom="12dp"/>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvPasos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Los pasos del algoritmo se mostrarÃ¡n aquÃ­"
                            android:textSize="12sp"
                            android:textColor="#666"
                            android:fontFamily="monospace"
                            android:lineSpacingExtra="2dp"/>

                    </HorizontalScrollView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>